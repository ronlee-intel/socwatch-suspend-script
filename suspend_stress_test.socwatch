#!/bin/bash

export SOCWATCH_INSTALL_PATH="$(< /var/lib/socwatch_suspend/install_path)"
echo "suspend_stress_test.socwatch: SOCWATCH_INSTALL_PATH: ${SOCWATCH_INSTALL_PATH}"

orig_suspend_file="${SOCWATCH_INSTALL_PATH}/suspend_stress_test.orig"

suspend_args=""
pre_suspend_cmd=""

while [ $# -gt 0 ]; do
  case "$1" in
    --pre_suspend_command)
      pre_suspend_cmd="$2"
      shift 2
      ;;
    --pre_suspend_command=*)
      pre_suspend_cmd="${1#*=}"
      shift
      ;;
    *)
      suspend_args+="$1 "
      shift
      ;;
  esac
done

echo "suspend_args: ${suspend_args}"
echo "pre_suspend_cmd: ${pre_suspend_cmd}"

${orig_suspend_file} --pre_suspend_command ". ${SOCWATCH_INSTALL_PATH}/pre_socwatch_suspend.sh ${pre_suspend_cmd}" ${suspend_args}
